{
  "name": "todo",
  "version": "1.1.3",
  "description": "A local ToDo app",
  "main": "index.js",
  "repository": "https://github.com/RobinWeitzel/ToDo.git",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "author": "Robin Weitzel",
  "license": "MIT",
  "devDependencies": {
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0"
  },
  "dependencies": {
    "dialogs": "^2.0.1",
    "electron-store": "^6.0.0"
  },
  "build": {
    "productName": "ToDo",
    "appId": "com.robinweitzel.todo",
    "win": {
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "todo.exe"
    }
  }
}
